{
    "extends": "../tsconfig-global.json",
    "compilerOptions": {
        "target": "es2018",
        "outDir": "dist",
        "baseUrl": ".",
        "allowJs": true,
        "module": "esnext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "noUnusedLocals": false,
        "noImplicitReturns": false,
        "noEmitOnError": false,
        "strict": true,
        // "typeRoots": [
        //     "../terriajs/lib/ThirdParty",
        //     "./node_modules/@types",
        //     "../node_modules/@types"
        // ],
        "types": [
            "mocha",
            "cesium",
            // "terriajs-cesium",
            // "mapbox__point-geometry",
            // "mapbox__vector-tile",
            // "terriajs-html2canvas",
            "urijs"
        ]
    },
    "include": ["src"]
